{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chatter.local/config-schemas/moderation.schema.json",
  "title": "ModerationConfig",
  "type": "object",
  "additionalProperties": false,
  "required": ["config_type", "config_version", "blocklists", "pii_patterns"],
  "properties": {
    "config_type": { "const": "moderation" },
    "config_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },

    "blocklists": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "action", "patterns", "case_insensitive"],
        "properties": {
          "name": { "type": "string", "minLength": 1, "maxLength": 64 },
          "action": { "type": "string", "enum": ["drop", "redact"] },
          "patterns": {
            "type": "array",
            "minItems": 1,
            "maxItems": 256,
            "items": { "type": "string", "minLength": 1, "maxLength": 256 }
          },
          "case_insensitive": { "type": "boolean" }
        }
      }
    },

    "pii_patterns": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "regex", "replacement"],
        "properties": {
          "kind": { "type": "string", "minLength": 1, "maxLength": 64 },
          "regex": { "type": "string", "minLength": 1, "maxLength": 512 },
          "replacement": { "type": "string", "minLength": 1, "maxLength": 32 }
        }
      }
    },

    "allowed_emotes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 64 },
      "maxItems": 2048
    },

    "link_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["allow", "warn", "block"] },
        "blocked_domains": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 128 },
          "maxItems": 512
        }
      }
    }
  }
}
