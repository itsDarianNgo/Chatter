# Core
# Used by containers on the docker network (service name "redis")
REDIS_URL=redis://redis:6379/0

# Used by host-run scripts (capture publishers, local node e2e runners)
REDIS_URL_HOST=redis://127.0.0.1:6379/0

ROOM_ID=room:demo
LOG_LEVEL=INFO

# Generation
GENERATION_MODE=deterministic
LLM_PROVIDER_CONFIG_PATH=configs/llm/providers/stub.json
PROMPT_MANIFEST_PATH=prompts/manifest.json

# LiteLLM (blank)
OPENAI_API_KEY=

# Memory (future; keep defaults off)
MEMORY_ENABLED=false
MEMORY_POLICY_PATH=configs/memory/default_policy.json
MEMORY_BACKEND=stub
MEMORY_FIXTURES_PATH=data/memory_stub/fixtures/demo.json
MEMORY_MAX_ITEMS=5
MEMORY_MAX_CHARS=800
MEMORY_EXTRACT_STRATEGY=heuristic
MEMORY_SCOPE_USER_ENABLED=false
# Mem0 requires at least one identifier (app_id/user_id/agent_id/run_id).
# Add uses top-level identifiers; search uses identifiers under filters. Chatter derives agent_id/run_id/user_id from scope keys.
MEM0_API_KEY=
MEM0_BASE_URL=https://api.mem0.ai
MEM0_APP_ID=
MEM0_ORG_ID=
MEM0_PROJECT_ID=
MEM0_TIMEOUT_S=10

# Stream perception
STREAM_FRAMES_KEY=stream:frames
STREAM_TRANSCRIPTS_KEY=stream:transcripts
STREAM_OBSERVATIONS_KEY=stream:observations
TRANSCRIPT_BUFFER_RETENTION_MS=120000
TRANSCRIPT_JOIN_WINDOW_MS=30000
