{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MemoryItem",
  "type": "object",
  "properties": {
    "schema_name": { "const": "MemoryItem" },
    "schema_version": { "const": "1.0.0" },
    "id": { "type": "string", "minLength": 6 },
    "ts": { "type": "string", "format": "date-time" },
    "scope": { "type": "string", "enum": ["persona", "persona_room", "persona_user"] },
    "scope_key": { "type": "string", "minLength": 1, "maxLength": 256, "pattern": "^[^\\r\\n]+$" },
    "category": {
      "type": "string",
      "enum": ["persona_trait", "preference", "room_lore", "relationship", "running_joke"]
    },
    "subject": { "type": "string", "minLength": 1, "maxLength": 64, "pattern": "^[^\\r\\n]+$" },
    "value": { "type": "string", "minLength": 1, "maxLength": 256, "pattern": "^[^\\r\\n]*$" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "ttl_days": { "type": "integer", "minimum": 1, "maximum": 365 },
    "source": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["chat_message", "system_seed", "manual"] },
        "message_id": { "type": ["string", "null"], "minLength": 1 },
        "user_id": { "type": ["string", "null"], "minLength": 1 },
        "origin": { "type": "string", "enum": ["human", "bot", "system"] }
      },
      "required": ["kind", "message_id", "user_id", "origin"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": { "properties": { "kind": { "const": "chat_message" } } },
          "then": { "required": ["message_id"] }
        }
      ]
    },
    "tags": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "boolean"] }
    },
    "redactions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "expires_at": { "type": "string", "format": "date-time" },
    "version": { "type": "integer", "minimum": 1 }
  },
  "required": [
    "schema_name",
    "schema_version",
    "id",
    "ts",
    "scope",
    "scope_key",
    "category",
    "subject",
    "value",
    "confidence",
    "ttl_days",
    "source"
  ],
  "additionalProperties": false
}
